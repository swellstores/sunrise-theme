<div class="standard-dropdown">
  <div>
    {% for link in links %}
      <div class="{% unless forloop.last %}pb-8{% endunless %}">
        <a
          href="{{ link.url }}"
          class="block font-medium whitespace-nowrap font-heading hover:underline leading-[22px]"
        >
          {{ link.title | escape }}
        </a>
      </div>
    {% endfor %}
  </div>
</div>
