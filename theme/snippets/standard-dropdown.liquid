<standard-dropdown>
  <div class="standard-dropdown">
    <div class="standard-dropdown-content">
      {% if link and link.links.size > 0 %}
        {% for child_link in link.links %}
          <div class="standard-dropdown-item">
            {% if child_link.links.size > 0 %}
              <div class="standard-dropdown-parent flex justify-between items-center">
                <a
                  href="{{ child_link.url }}"
                  class="block whitespace-nowrap font-semibold hover:underline leading-[22px]"
                >
                  {{ child_link.title | escape }}
                </a>
                <button
                  class="standard-dropdown-toggle ml-1"
                  aria-expanded="false"
                  aria-controls="dropdown-{{ section.id }}-{{ link.handle }}-{{ forloop.index }}"
                >
                  <ion-icon
                    name="chevron-down-outline"
                    aria-label="Toggle dropdown item"
                    class="h-[20px] w-[20px]"
                  ></ion-icon>
                </button>
              </div>
              <div
                id="dropdown-{{ section.id }}-{{ link.handle }}-{{ forloop.index }}"
                class="standard-dropdown-children hidden"
              >
                {% for grandchild_link in child_link.links %}
                  <div>
                    <a
                      href="{{ grandchild_link.url }}"
                      class="block font-normal whitespace-nowrap hover:underline leading-[22px]"
                    >
                      {{ grandchild_link.title | escape }}
                    </a>
                  </div>
                {% endfor %}
              </div>
            {% else %}
              <a
                href="{{ child_link.url }}"
                class="block whitespace-nowrap font-semibold hover:underline leading-[22px]"
              >
                {{ child_link.title | escape }}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</standard-dropdown>
