<span class="m-1 inline-flex items-center rounded border border-gray-200 bg-white p-1 pl-3 text-sm text-gray-700">
  <span>{{ filter.label }}:&nbsp;</span>
  <span class="font-semibold">
    {% if filter.type == 'price_range' %}
      {% liquid
        assign price_from = 0
        assign price_to = filter.range_max

        if filter.min_value.value
          assign price_from = filter.min_value.value
        endif
        if filter.max_value.value
          assign price_to = filter.max_value.value
        endif
      %}
      {{ price_from | money }} &ndash; {{ price_to | money }}
    {% else %}
      {{ value.label }}
    {% endif %}
  </span>

  {% if filter.type == 'price_range' %}
    <a
      href="{{ filter.url_to_remove }}"
      hx-boost="true"
      hx-push-url="true"
      hx-target="#results"
      hx-select="#results"
      class="ml-1 inline-flex h-5 w-5 flex-shrink-0 rounded-sm p-1.5 text-gray-400 hover:bg-gray-200 hover:text-gray-500"
    >
      <span class="sr-only">Remove filter for {{ filter.label }} </span>
      <svg class="h-2 w-2" stroke="currentColor" fill="none" viewBox="0 0 8 8">
        <path stroke-linecap="round" stroke-width="1.5" d="M1 1l6 6m0-6L1 7" />
      </svg>
    </a>

  {% else %}
    <a
      href="{{ value.url_to_remove }}"
      hx-boost="true"
      hx-push-url="true"
      hx-target="#results"
      hx-select="#results"
      class="not-price-filter ml-1 inline-flex h-5 w-5 flex-shrink-0 rounded-sm p-1.5 text-gray-400 hover:bg-gray-200 hover:text-gray-500"
    >
      <span class="sr-only">Remove filter for {{ filter.label }}: {{ value.label }} </span>
      <svg
        class="h-2 w-2"
        stroke="currentColor"
        fill="none"
        viewBox="0 0 8 8"
      >
        <path
          stroke-linecap="round"
          stroke-width="1.5"
          d="M1 1l6 6m0-6L1 7" />
      </svg>
    </a>
  {% endif %}
</span>
