{%- liquid
  assign size = size | default: 'sm'
  assign border_radius = settings.border_radius | default: 6 | times: 0.1 | round: 1
-%}

<quantity-selector-root
  class="quantity-selector-root quantity-selector-pdp flex items-center gap-12"
  data-context="pdp"
>
  <div
    class="border-color-{{ color_scheme }} grid {% if size == 'lg' %}max-w-160{% else %} max-w-96{% endif %} grid-cols-3 border rounded-4"
    style="border-radius:{{ border_radius }}rem"
  >
    <quantity-selector-decrement
      role="button"
      class="flex items-center justify-center {% if size == 'lg' %}m-16{% else %}m-8{% endif %}"
      aria-label="{{ 'sections.product.quantity.decrement' | t }}"
    >
      <span name="remove-outline" aria-hidden="true">
        {{- 'icon-minus.svg' | inline_asset_content -}}
      </span>
    </quantity-selector-decrement>

    <input
      class="text-center text-body-small number-input"
      type="number"
      data-is-product-quantity="yes"
      data-product-id="{{ product.id }}"
      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
      value="1"
      min="1"
      max="{{ product.selected_or_first_available_variant.inventory_quantity }}"
      step="1"
      aria-label="{{ 'sections.product.quantity.decrement' | t: product_name: product.title | escape }}"
      style="border-radius:{{ border_radius }}rem"
    >

    <quantity-selector-increment
      role="button"
      class="flex items-center justify-center {% if size == 'lg' %}m-16{% else %}m-8{% endif %}"
      aria-label="{{ 'sections.product.quantity.increment' | t }}"
    >
      <span name="add-outline" aria-hidden="true">
        {{- 'icon-plus.svg' | inline_asset_content -}}
      </span>
    </quantity-selector-increment>
  </div>
</quantity-selector-root>
