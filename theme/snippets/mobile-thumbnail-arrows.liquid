{% comment %}
  Renders navigation buttons for a slideshow.

  Accepts:
    - color_scheme: {string} The color scheme ID for styling the buttons (required)

  Usage:
   {% render 'mobile-thumbnail-arrows', color_scheme: color_scheme, border_radius: settings.border_radius %}
{% endcomment %}

{% liquid
  assign border_radius = settings.border_radius | default: 6 | times: 0.1 | round: 1
%}

<slideshow-button-prev
  role="button"
  aria-label="{{ 'general.pagination.previous' | t }}"
  type="button"
  class="text-accent-{{ color_scheme }} group absolute left-0 top-1/2 flex h-44 w-48 -translate-y-1/2 items-center justify-center border-none transition-colors z-10"
  style="border-radius: {{ border_radius }}rem;"
>
  {{- 'product-arrow-left.svg' | inline_asset_content -}}
</slideshow-button-prev>
<slideshow-button-next
  role="button"
  aria-label="{{ 'general.pagination.next' | t }}"
  type="button"
  class="text-accent-{{ color_scheme }} group absolute right-0 top-1/2 flex h-44 w-48 -translate-y-1/2 items-center justify-center border-none transition-colors z-10"
  style="border-radius: {{ border_radius }}rem;"
>
  {{- 'product-arrow-right.svg' | inline_asset_content -}}
</slideshow-button-next>
