{% comment %}
  Renders navigation buttons for a slideshow.

  Accepts:
    - color_scheme_id: {string} The color scheme ID for styling the buttons (required)
    - slides_per_view: {number} The number of slides per view (required)

  Usage:
   {% render 'slideshow-navigation', color_scheme_id: color_scheme_id %}
{% endcomment %}

{%- liquid
  assign slides_per_view = slides_per_view
  if slides_per_view == 3
    assign assign top_class = 'top-80'
  elsif slides_per_view == 5
    assign top_class = 'top-[12.188rem]'
  else
    assign top_class = 'top-32'
  endif
-%}

<slideshow-button-prev
  role="button"
  aria-label="Previous slide"
  type="button"
  class="group absolute left-0 {{ top_class }} flex h-11 w-11 -translate-y-1/2 items-center justify-center border-none transition-colors z-10 text-{{ color_scheme_id }}-text bg-{{ color_scheme_id }}-background"
>
  <ion-icon
    aria-hidden="true"
    name="arrow-back-outline"
    class="inline-flex h-5 w-5 transform items-center justify-center transition-transform group-hover:-translate-x-0.5"
  ></ion-icon>
</slideshow-button-prev>
<slideshow-button-next
  role="button"
  aria-label="Next slide"
  type="button"
  class="group absolute right-0 {{ top_class }} flex h-11 w-11 -translate-y-1/2 items-center justify-center border-none transition-colors z-10 text-{{ color_scheme_id }}-text bg-{{ color_scheme_id }}-background"
>
  <ion-icon
    aria-hidden="true"
    name="arrow-forward-outline"
    class="inline-flex h-5 w-5 transform items-center justify-center transition-transform group-hover:translate-x-0.5"
  ></ion-icon>
</slideshow-button-next>
