{%- liquid
  assign color_scheme = color_scheme
  assign sort_by = results.sort_by | default: results.default_sort_by
  assign request_path = results.url | default: request.path
-%}

<filter-drawer-root class="text-{{ color_scheme }}">
  <button
    data-trigger="filter-drawer"
    type="button"
    aria-expanded="false"
    class="inline-block text-title-small font-display"
  >
    <span class="flex gap-8 items-center">
      {{- 'filter-sort-icon.svg' | inline_asset_content -}}
      {{ 'sections.collection.filters.filter_and_sort' | t -}}
    </span>
  </button>

  <!-- Filter drawer -->
  <div
    data-target="filter-drawer"
    class="fixed top-0 left-0 h-full w-340 lg:w-400 bg-white hidden"
    style="z-index: 5000"
    role="dialog"
    aria-modal="true"
    aria-expanded="false"
  >
    <div class="flex flex-col h-full">
      <!-- Header -->
      <div class="flex items-center justify-between p-24 border-b border-gray-200">
        <h3 class="font-display filter-drawer-title">{{ 'sections.collection.filters.filters' | t }}</h3>
        <button
          data-trigger="filter-drawer"
          type="button"
          class="flex h-40 items-center justify-center"
        >
          <span class="sr-only">{{ 'sections.collection.filters.close' | t }}</span>
          <ion-icon name="close" aria-hidden="true" class="w-24 h-24"></ion-icon>
        </button>
      </div>

      <!-- Filters Form -->
      <form
        id="filter-form-stack"
        hx-get="{{ request_path }}"
        hx-trigger="change from:(#filter-form-stack input), change from:(.price-slider)"
        hx-on="htmx:configRequest: updateSortFilters(event)"
        hx-target="#results"
        hx-select="#results, #active-filters"
        hx-swap="outerHTML"
        hx-on="htmx:afterRequest: handleFilterResponse(event)"
        class="flex-1 overflow-y-auto"
      >
        <div class="px-24">
          {% for filter in results.filters %}
            <details
              class="filter-section"
              open
            >
              <summary class="flex items-center justify-between py-18 list-none cursor-pointer">
                <h4 class="filter-title font-display">{{ filter.label }}</h4>
                <ion-icon
                  name="chevron-down-outline"
                  aria-label="{{ 'general.accordion.toggle' | t }}"
                  class="h-20 w-20 transition-transform"
                ></ion-icon>
              </summary>
              <div class="filter-options">
                {% if filter.type == 'list' %}
                  <div class="flex flex-col">
                    <!-- "All" option -->
                    <label class="flex items-center flex-nowrap filter-checkbox-height">
                      <input
                        type="checkbox"
                        class="size-16 mr-6 rounded border-gray-300 all-checkbox"
                        name="{{ filter.param_name }}_all"
                        value="all"
                        data-filter-group="{{ filter.param_name }}"
                      >
                      <span class="font-display text-nowrap">All</span>
                    </label>
                    {% for option in filter.values %}
                      {% render 'filter-input', filter: filter, option: option %}
                    {% endfor %}
                  </div>
                {% else %}
                  {% render 'filter-input', filter: filter %}
                {% endif %}
              </div>
            </details>
          {% endfor %}
        </div>
      </form>

      <!-- Add submit button as fallback -->
      <div class="p-24">
        <button
          type="submit"
          form="filter-form-stack"
          class="w-full py-12 px-24 bg-black text-white text-body-large font-display"
          onclick="prepareFormSubmission()"
        >
          View results
        </button>
      </div>
    </div>
  </div>

  <!-- Active filters -->
  <section aria-labelledby="filter-heading">
    <h2 id="filter-heading" class="sr-only">{{ 'sections.collection.filters.filters' | t }}</h2>

    <!-- Active filter list -->
    {% liquid
      assign active_filter_count = 0
      assign active_price_range = false
      for filter in results.filters
        if filter.type == 'price_range'
          if filter.min_value.value or filter.max_value.value
            assign active_filter_count = active_filter_count | plus: 1
            assign active_price_range = true
          endif
        else
          if filter.active_values.size > 0
            assign active_filter_count = active_filter_count | plus: 1
          endif
        endif
      endfor
    %}

    <div id="active-filters" hx-swap-oob="true">
      {% if active_filter_count > 0 %}
        <div class="bg-{{ color_scheme }} py-12 sm:flex sm:justify-between sm:items-center">
          <span class="sr-only">{{ 'sections.collection.filters.active' | t }}</span>
          <div class="-m-4 flex flex-wrap items-center">
            {% for filter in results.filters %}
              {% if filter.type == 'price_range' %}
                {% if active_price_range %}
                  {% render 'filter-tag', filter: filter, color_scheme: color_scheme %}
                {% endif %}
              {% else %}
                {% for value in filter.active_values %}
                  {% render 'filter-tag', filter: filter, value: value, color_scheme: color_scheme %}
                {% endfor %}
              {% endif %}
            {% endfor %}
          </div>
          <div class="clear-all">
            <a
              href="{{ results.url }}"
              class="text-{{ color_scheme }} underline-offset-2 hover:underline"
              hx-boost="true"
              hx-push-url="true"
              hx-target="#results"
              hx-select="#results"
              hx-swap="outerHTML"
            >
              {{ 'sections.collection.filters.clear_all' | t }}
            </a>
          </div>
        </div>
      {% else %}
        <!-- Empty state to ensure out-of-band swap works -->
        <div style="display: none;"></div>
      {% endif %}
    </div>
  </section>
</filter-drawer-root>

<script>
  document.addEventListener('htmx:afterSwap', function () {
    const params = new URLSearchParams(window.location.search);

    document.querySelectorAll('input[type="checkbox"]').forEach((checkbox) => {
      const paramName = checkbox.name;
      const paramValue = checkbox.value;

      if (!params.has(paramName) || !params.getAll(paramName).includes(paramValue)) {
        checkbox.checked = false;
      }
    });

    const results = document.querySelector('#results');

    if (results) {
      results.classList.remove('opacity-20');
    }

    if (window.initPriceSliders) {
      window.initPriceSliders();
    }

    if (window.filters) {
      window.filters();
    }
  });

  document.addEventListener('htmx:oobAfterSwap', (event) => {
    const element = event.target;

    if (element.id === 'filter-form-bar' && window.filters) {
      window.filters();
    }
  });

  document.body.addEventListener('htmx:beforeRequest', function (event) {
    const results = document.querySelector('#results');

    if (results) {
      results.classList.add('opacity-20');
    }

    // Track the current request for cancellation
    currentRequest = event.detail.xhr;
  });

  document.addEventListener('htmx:afterRequest', function (event) {
    // Clear the current request reference when it completes
    if (event.detail.xhr === currentRequest) {
      currentRequest = null;
      isSelectingAll = false;
      currentAllFilterGroup = null;
    }
  });

  document.addEventListener('htmx:responseError', function (event) {
    if (event.detail.xhr === currentRequest) {
      currentRequest = null;
      if (isSelectingAll) {
        isSelectingAll = false;
        currentAllFilterGroup = null;
      }
    }
  });

  document.addEventListener('htmx:configRequest', (event) => {
    // Only prevent requests from "All" checkboxes that are being checked
    const trigger = event.detail.elt;
    if (trigger && trigger.classList.contains('all-checkbox') && trigger.checked) {
      event.preventDefault();
      return false;
    }

    if (window.onHtmxConfigRequest) {
      window.onHtmxConfigRequest(event);
    }
  });

  document.addEventListener('priceSliderChanged', function (event) {
    const results = document.querySelector('#results');
    if (results) {
      results.classList.add('opacity-20');
    }
  });

  function prepareFormSubmission() {
    const form = document.querySelector('#filter-form-stack');
    if (!form) return;

    const allCheckboxes = form.querySelectorAll('input[name$="_all"]');
    allCheckboxes.forEach((checkbox) => {
      if (checkbox.checked) {
        checkbox.disabled = true;
      }
    });

    setTimeout(() => {
      allCheckboxes.forEach((checkbox) => {
        checkbox.disabled = false;
      });
    }, 100);
  }

  let isSelectingAll = false;
  let currentAllFilterGroup = null;
  let currentRequest = null;

  function cancelPendingRequests() {
    if (currentRequest) {
      currentRequest.abort();
      currentRequest = null;
    }
  }

  function syncCheckboxStates() {
    const params = new URLSearchParams(window.location.search);
    const filterForm = document.querySelector('#filter-form-stack');

    if (!filterForm) return;

    filterForm.querySelectorAll('input[name$="_all"]').forEach((checkbox) => {
      const filterGroup = checkbox.getAttribute('data-filter-group');

      if (isSelectingAll && currentAllFilterGroup === filterGroup) {
        checkbox.checked = true;
        return;
      }

      const hasActiveFilters = Array.from(params.keys()).some(
        (key) => key === filterGroup || key.startsWith(filterGroup + '['),
      );

      checkbox.checked = !hasActiveFilters;
    });

    filterForm.querySelectorAll('input[type="checkbox"]:not([name$="_all"])').forEach((checkbox) => {
      const shouldBeChecked = params.has(checkbox.name) && params.getAll(checkbox.name).includes(checkbox.value);
      checkbox.checked = shouldBeChecked;
    });
  }

  function handleAllCheckboxBehavior() {
    const filterForm = document.querySelector('#filter-form-stack');
    if (!filterForm) return;

    filterForm.addEventListener('change', function (event) {
      const checkbox = event.target;

      if (checkbox.classList.contains('all-checkbox')) {
        const filterGroup = checkbox.getAttribute('data-filter-group');

        if (checkbox.checked) {
          isSelectingAll = true;
          currentAllFilterGroup = filterGroup;

          cancelPendingRequests();

          filterForm.querySelectorAll(`input[name="${filterGroup}"]`).forEach((otherCheckbox) => {
            if (otherCheckbox !== checkbox && !otherCheckbox.name.endsWith('_all')) {
              otherCheckbox.checked = false;
            }
          });

          event.preventDefault();
          event.stopPropagation();

          requestAnimationFrame(() => {
            filterForm.querySelectorAll(`input[name="${filterGroup}"]`).forEach((otherCheckbox) => {
              if (otherCheckbox !== checkbox && !otherCheckbox.name.endsWith('_all')) {
                otherCheckbox.checked = false;
              }
            });

            const formData = new FormData(filterForm);

            for (let [key, value] of formData.entries()) {
              if (key === filterGroup || key.startsWith(filterGroup + '[')) {
                formData.delete(key);
              }
            }

            const urlParams = new URLSearchParams();
            for (let [key, value] of formData.entries()) {
              urlParams.append(key, value);
            }

            const baseUrl = filterForm.getAttribute('hx-get');
            const finalUrl = new URL(baseUrl, window.location.origin);

            for (let [key, value] of urlParams.entries()) {
              finalUrl.searchParams.append(key, value);
            }

            currentRequest = htmx.ajax('GET', finalUrl.toString(), {
              target: filterForm.getAttribute('hx-target'),
              select: filterForm.getAttribute('hx-select'),
              swap: filterForm.getAttribute('hx-swap'),
              pushUrl: true,
              replaceUrl: true,
            });
          });
        } else {
          isSelectingAll = false;
          currentAllFilterGroup = null;
        }
      } else {
        const paramName = checkbox.name;
        const allCheckbox = filterForm.querySelector(`input[name="${paramName}_all"]`);
        if (allCheckbox) {
          allCheckbox.checked = false;
        }
      }
    });
  }

  function handleInitialLoad() {
    const filterForm = document.querySelector('#filter-form-stack');
    if (!filterForm) return;

    filterForm.querySelectorAll('input[name$="_all"]').forEach((checkbox) => {
      checkbox.checked = true;
    });

    const params = new URLSearchParams(window.location.search);
    const hasAnyFilters = Array.from(params.keys()).some((key) => key.includes('filter_') || key.includes('price'));

    if (hasAnyFilters) {
      syncCheckboxStates();
    }
  }

  document.addEventListener('DOMContentLoaded', function () {
    handleInitialLoad();
    handleAllCheckboxBehavior();
  });

  window.addEventListener('load', function () {
    handleInitialLoad();
    handleAllCheckboxBehavior();
  });

  if (document.readyState === 'loading') {
  } else {
    handleInitialLoad();
    handleAllCheckboxBehavior();
  }

  document.addEventListener('htmx:afterSwap', function () {
    syncCheckboxStates();
    handleAllCheckboxBehavior();
  });

  function handleFilterResponse(event) {
    try {
      const responseText = event.detail.xhr.responseText;

      const tempDiv = document.createElement('div');
      tempDiv.innerHTML = responseText;

      const newResults = tempDiv.querySelector('#results');
      const currentResults = document.querySelector('#results');
      if (newResults && currentResults) {
        currentResults.outerHTML = newResults.outerHTML;
      }

      const newActiveFilters = tempDiv.querySelector('#active-filters');
      const currentActiveFilters = document.querySelector('#active-filters');
      if (newActiveFilters && currentActiveFilters) {
        currentActiveFilters.outerHTML = newActiveFilters.outerHTML;
      }

      tempDiv.remove();
    } catch (error) {
      console.error('Error handling filter response:', error);
    }
  }
</script>

