{%- liquid
  assign reduced_padding_top = section.settings.top_padding | times: 0.55 | round: 0
  assign reduced_padding_bottom = section.settings.bottom_padding | times: 0.55 | round: 0
-%}

{% style %}
  .responsive-padding-{{ section.id }} {
    padding-top: {{ reduced_padding_top }}px;
    padding-bottom: {{ reduced_padding_bottom }}px;
  }

  @media (min-width: 1024px) {
    .responsive-padding-{{ section.id }} {
      padding-top: {{ section.settings.top_padding }}px;
      padding-bottom: {{ section.settings.bottom_padding }}px;
    }
  }
{% endstyle %}

<div class="bg-{{section.settings.color_scheme}} flex max-w-[1046px] flex-col pt-[16px] pb-[64px] pr-[32px] pl-[32px] gap-[24px] xl:pr-[0px] xl:pl-[0px] sm:flex-row sm:pt-[64px] sm:pb-[64px] mx-auto justify-center sm:gap-[32px] items-start responsive-padding-{{ section.id }}">
  <a href="/account/" class="sm:hidden  font-display text-title-large">Account Settings</a>

  <div class="flex flex-col items-start text-center w-[250px]">
    <a
      href="/account"
      class="border-l px-[8px] py-[4px] font-display text-title-small {% if request.path == '/account' %}text-{{ section.settings.color_scheme }} border-[#222222] {% else %}text-secondary-{{ section.settings.color_scheme }} border-[#E0E0E0]{% endif %}"
    >
      My Orders
    </a>
    <a
      href="/account/addresses"
      class="border-l px-[8px] py-[4px] font-display text-title-small {% if request.path == '/account/addresses' %}text-{{ section.settings.color_scheme }} border-[#222222] {% else %}text-secondary-{{ section.settings.color_scheme }} border-[#E0E0E0]{% endif %}"
    >
      Address Book
    </a>

    <a
      href="{{ routes.account_logout_url }}"
      class="px-[8px] py-[4px] font-display text-title-small"
      >Logout</a
    >
  </div>
  {%- paginate customer.addresses by 5 -%}
    <div class="flex flex-col gap-[32px] w-full">
      <h2 class="font-display text-headline-medium uppercase">Addresses</h2>

      {% comment %}
        <div>
          <div class="flex items-start text-center w-[250px]">
            <a
              href="/"
              class="text-black font-display text-title-small h-[38px] border-[#222222] border-b"
              >Your saved addresses</a
            >
          </div>
        </div>
      {% endcomment %}

      <div class="flex flex-col gap-[32px]">
        <ul id="saved-addresses" class="flex flex-col gap-[16px]">
          {%- for address in customer.addresses -%}
            <script type="application/json" id="address-data-{{ address.id }}">
              {{ address | json }}
            </script>
            <li class="flex justify-between">
              <div class="flex flex-col text-body-medium font-display">
                {{ address | format_address -}}
                {{- address.phone }}
              </div>
              <div class="flex flex-col items-end">
                {%- if address == customer.default_address -%}
                  <h2 class="font-display text-body-medium font-display font-bold">Default address</h2>
                {%- endif -%}
                <div class="text-{{ section.settings.color_scheme }} text-title-small font-display flex gap-[12px]">
                  <button
                    id="edit-button-{{ address.id }}"
                    class="edit-address-button"
                    data-address-id="{{ address.id }}"
                  >
                    Edit
                  </button>
                  <button
                    class="remove-address-button"
                    data-address-id="{{ address.id }}"
                    data-target="/account/addresses/{{ address.id }}"
                    data-confirm-message="Are you sure you want to delete this address?"
                  >
                    Remove
                  </button>
                </div>
              </div>
            </li>
            {% unless forloop.last %}
              <div class="border-t border-[#E0E0E0] w-full"></div>
            {% endunless %}
          {%- endfor -%}
        </ul>

        <div id="add-address-button">
          {% render 'button',
            text: 'Add Address',
            type: 'button',
            name: 'toggle-new-address',
            color_scheme: section.settings.color_scheme
          %}
        </div>
        <div id="new-address-form" class="hidden max-w-[500px] flex flex-col gap-[32px]">
          <div class="flex justify-between items-end">
            <h2 class="font-display text-display-small ">New address</h2>
            <a
              href="/account/addresses"
              class="text-body-medium font-display  underline"
              >Back to address book</a
            >
          </div>
          {%- form 'customer_address', customer.new_address -%}
            <div class="mb-16 flex w-512 flex-col gap-4">
              <div class="flex gap-[16px]">
                <div class="relative w-full">
                  {% render 'input',
                    type: 'text',
                    name: 'address[first_name]',
                    id: 'address[first_name]',
                    value: form.first_name,
                    placeholder: 'First name',
                    variant: 'account'
                  %}
                </div>
                <div class="relative w-full">
                  {% render 'input',
                    type: 'text',
                    name: 'address[last_name]',
                    id: 'address[last_name]',
                    value: form.last_name,
                    placeholder: 'Last name',
                    variant: 'account'
                  %}
                </div>
              </div>
              <div class="relative">
                {% render 'input',
                  type: 'text',
                  name: 'address[company]',
                  id: 'address[company]',
                  value: form.company,
                  placeholder: 'Company',
                  variant: 'account'
                %}
              </div>
              <div class="relative">
                {% render 'input',
                  type: 'text',
                  name: 'address[address1]',
                  id: 'address[address1]',
                  value: form.address1,
                  placeholder: 'Address 1',
                  variant: 'account'
                %}
              </div>
              <div class="relative">
                {% render 'input',
                  type: 'text',
                  name: 'address[address2]',
                  id: 'address[address2]',
                  value: form.address2,
                  placeholder: 'Address 2',
                  variant: 'account'
                %}
              </div>
              <div class="relative">
                {% render 'input',
                  type: 'text',
                  name: 'address[city]',
                  id: 'address[city]',
                  value: form.city,
                  placeholder: 'City',
                  variant: 'account'
                %}
              </div>
              <div>
                <label for="address[country]" class="block mb-2 text-sm font-medium text-gray-900">Country</label>
                <select
                  id="address[country]"
                  name="address[country]"
                  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                >
                  {{ all_country_option_tags }}
                </select>
              </div>
              <div class="hidden">
                <label for="address[province]" class="block mb-2 text-sm font-medium text-gray-900">Province</label>
                <select
                  id="address[province]"
                  name="address[province]"
                  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                ></select>
              </div>
              <div class="relative">
                {% render 'input',
                  type: 'text',
                  name: 'address[zip]',
                  id: 'address[zip]',
                  value: form.zip,
                  placeholder: 'Postcode',
                  variant: 'account'
                %}
                {% comment %} {% render 'label', for: 'address[zip]', text: 'Postcode' %} {% endcomment %}
              </div>
              <div class="relative">
                {% render 'input',
                  type: 'tel',
                  name: 'address[phone]',
                  id: 'address[phone]',
                  value: form.zip,
                  placeholder: 'Phone number (Optional)',
                  variant: 'account'
                %}
                {% comment %} {% render 'label', for: 'address[phone]', text: 'Phone' %} {% endcomment %}
              </div>
              <div>
                {{ form.set_as_default_checkbox }}
                <label class="">Set as default address</label>
              </div>
              <div class="flex gap-4 items-center justify-end">
                {% render 'button',
                  type: 'button',
                  text: 'Cancel',
                  name: 'cancel-button',
                  color_scheme: section.settings.color_scheme,
                  variant: 'secondary'
                %}
                {% render 'button',
                  type: 'submit',
                  text: 'Save address',
                  color_scheme: section.settings.color_scheme
                %}
              </div>
            </div>
          {%- endform -%}
        </div>
        {%- for address in customer.addresses -%}
          <div id="edit-address-form-{{ address.id }}" class="hidden max-w-[500px] flex flex-col gap-[32px]">
            <div class="flex justify-between items-end">
              <h2 class="font-display text-display-small ">Edit address</h2>
              <a
                href="/account/addresses"
                class="text-body-medium font-display  underline"
                >Back to address book</a
              >
            </div>
            {%- form 'customer_address', address, return_to: '/account/addresses' -%}
              <div class="mb-16 flex w-512 flex-col gap-4">
                <div class="relative">
                  {% render 'input',
                    type: 'text',
                    name: 'address[first_name]',
                    id: 'address[first_name]',
                    value: form.first_name,
                    placeholder: 'First name',
                    variant: 'account'
                  %}
                </div>
                <div class="relative">
                  {% render 'input',
                    type: 'text',
                    name: 'address[last_name]',
                    id: 'address[last_name]',
                    value: form.last_name,
                    placeholder: 'Last name',
                    variant: 'account'
                  %}
                </div>
                <div class="relative">
                  {% render 'input',
                    type: 'text',
                    name: 'address[company]',
                    id: 'address[company]',
                    value: form.company,
                    placeholder: 'Company',
                    variant: 'account'
                  %}
                </div>
                <div class="relative">
                  {% render 'input',
                    type: 'text',
                    name: 'address[address1]',
                    id: 'address[address1]',
                    value: form.address1,
                    placeholder: 'Address 1',
                    variant: 'account'
                  %}
                </div>
                <div class="relative">
                  {% render 'input',
                    type: 'text',
                    name: 'address[address2]',
                    id: 'address[address2]',
                    value: form.address2,
                    placeholder: 'Address 2',
                    variant: 'account'
                  %}
                </div>
                <div class="relative">
                  {% render 'input', type: 'text', name: 'address[city]', id: 'address[city]', value: form.city %}
                </div>
                <div>
                  <label for="address[country]" class="block mb-2 text-sm font-medium text-gray-900">Country</label>
                  <select
                    id="address[country]"
                    name="address[country]"
                    data-default="{{ form.country }}"
                    data-provinces="address[province]"
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                  >
                    {{ all_country_option_tags }}
                  </select>
                </div>
                <div class="hidden">
                  <label for="address[province]" class="block mb-2 text-sm font-medium text-gray-900">Province</label>
                  <select
                    id="address[province]"
                    name="address[province]"
                    data-default="{{ form.province }}"
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                  ></select>
                </div>
                <div class="relative">
                  {% render 'input',
                    type: 'text',
                    name: 'address[zip]',
                    id: 'address[zip]',
                    value: form.zip,
                    placeholder: 'Postcode',
                    variant: 'account'
                  %}
                </div>
                <div class="relative">
                  {% render 'input',
                    type: 'tel',
                    name: 'address[phone]',
                    id: 'address[phone]',
                    value: form.zip,
                    placeholder: 'Phone number (Optional)',
                    variant: 'account'
                  %}
                </div>
                <div>
                  <input type="hidden" name="address[default]" value="false">
                  <input
                    type="checkbox"
                    name="address[default]"
                    id="address[default]"
                    value="true"
                    {% if address == customer.default_address %}
                      checked
                    {% endif %}
                  >
                  <label for="address[default]" class="">Set as default address</label>
                </div>
                <div class="flex gap-4 items-center">
                  {% render 'button',
                    type: 'button',
                    text: 'Cancel',
                    name: 'cancel-button',
                    color_scheme: section.settings.color_scheme,
                    variant: 'secondary'
                  %}
                  {% render 'button',
                    type: 'submit',
                    text: 'Update address',
                    color_scheme: section.settings.color_scheme
                  %}
                </div>
              </div>
            {%- endform -%}
          </div>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        {%- if paginate.parts.size > 0 -%}
          <nav class="inline-flex -space-x-px text-sm" role="navigation" aria-label="Pagination">
            <ul role="list" class="inline-flex">
              {%- if paginate.previous -%}
                <li>
                  <a
                    href="{{ paginate.previous.url }}"
                    aria-label="Previous"
                    class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700"
                  >
                    Previous
                  </a>
                </li>
              {%- endif -%}

              {%- for part in paginate.parts -%}
                <li>
                  {%- if part.is_link -%}
                    <a
                      href="{{ part.url }}"
                      aria-label="{{ part.title }}"
                      class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700"
                    >
                      {{- part.title -}}
                    </a>
                  {%- else -%}
                    {%- if part.title == paginate.current_page -%}
                      <span
                        aria-current="page"
                        aria-label="{{ part.title }}"
                        class="flex items-center justify-center px-3 h-8 text-blue-600 border border-gray-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700"
                      >
                        {{- part.title -}}
                      </span>
                    {%- else -%}
                      <span class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">
                        {{- part.title -}}
                      </span>
                    {%- endif -%}
                  {%- endif -%}
                </li>
              {%- endfor -%}

              {%- if paginate.next -%}
                <li>
                  <a
                    href="{{ paginate.next.url }}"
                    aria-label="Next"
                    class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700"
                  >
                    Next
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </nav>
        {%- endif -%}
      {%- endif -%}
    </div>
  {%- endpaginate -%}
</div>

{% schema %}
{
  "name": "Addresses",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "top_padding",
      "label": "Top padding",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 96
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "Bottom padding",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 96
    }
  ]
}
{% endschema %}
