{%- if product.recommendations.size > 0 -%}
  <div class="bg-{{section.settings.color_scheme}} max-w-[1366px] mx-auto p-6">
    <div class="max-w-[1046px] mx-auto 2xl:max-w-[1380px] w-full">
      <div class="flex flex-col gap-[48px]">
        {%- if section.settings.heading != blank -%}
          <h2 class="font-display text-headline-small">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        <div class="flex flex-col gap-8">
          <div class="grid grid-cols-2 gap-x-[16px] gap-y-[24px] {% if section.settings.limit <= 2 %} lg:grid-cols-2 {% else %} lg:grid-cols-4 {% endif %}">
            {%- for recommended_product in product.recommendations limit: section.settings.limit -%}
              <div class="flex flex-col gap-[8px]">
                {% render 'product-card', product: recommended_product, color_scheme: section.settings.color_scheme %}
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Related products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Related products"
    },
    {
      "type": "range",
      "id": "limit",
      "label": "Products to show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 3
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
