{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign order = subscription %}

<div class="customer order section-{{ section.id }}-padding">
  <svg style="display:none">
    <symbol id="icon-discount" viewBox="0 0 12 12">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M7 0h3a2 2 0 012 2v3a1 1 0 01-.3.7l-6 6a1 1 0 01-1.4 0l-4-4a1 1 0 010-1.4l6-6A1 1 0 017 0zm2 2a1 1 0 102 0 1 1 0 00-2 0z" fill="currentColor">
    </symbol>
  </svg>
  <div>
    <h1 class="customer__title">{{ 'customer.account.title' | t }}</h1>
    <a href="{{ routes.account_subscriptions_url }}">{{ 'customer.subscription.return' | t }}</a>
  </div>

  <div>
    <div>
      <h2 class="pb-16">{{ 'customer.subscription.title' | t: name: subscription.number }}</h2>
      {%- render 'subscription',
        subscription: subscription
      -%}
      
      <div class="pl-60 pt-16">
        {% if subscription.status == 'active' %}
          {% if subscription.order_schedule %}
            <div>{{ 'customer.subscription.next_invoice' | t }} {{ subscription.date_period_end | time_tag: format: 'date_at_time' }}</div>
            <div>{{ 'customer.subscription.next_order' | t }} {{ subscription.date_order_period_end | time_tag: format: 'date_at_time' }}</div>
          {% else %}
            <div>{{ 'customer.subscription.next_order' | t }} {{ subscription.date_period_end | time_tag: format: 'date_at_time' }}</div>
          {% endif %}
        {% endif %}

        {% if subscription.status == 'trial' %}
          {% if subscription.order_schedule %}
            <div>{{ 'customer.subscription.first_invoice' | t }} {{ subscription.date_period_end | time_tag: format: 'date_at_time' }}</div>
            <div>{{ 'customer.subscription.first_order' | t }} {{ subscription.date_order_period_end | time_tag: format: 'date_at_time' }}</div>
          {% else %}
            <div>{{ 'customer.subscription.first_order' | t }} {{ subscription.date_period_end | time_tag: format: 'date_at_time' }}</div>
          {% endif %}
        {% endif %}
      </div>

      <table role="table" class="order-details">
        <tfoot role="rowgroup">
        <tr role="row">
          <td id="RowSubtotal" role="rowheader" scope="row" colspan="4">
            {{ 'customer.order.subtotal' | t }}
          </td>
          <td headers="RowSubtotal" role="cell" data-label="{{ 'customer.order.subtotal' | t }}">
            {{ subscription.sub_total | money }}
          </td>
        </tr>
        {%- if subscription.discount_total > 0 -%}
          <tr role="row">
            <td id="RowDiscount" role="rowheader" scope="row" colspan="4">
              {{ 'customer.order.discount' | t }}
            </td>
            <td headers="RowDiscount" role="cell" data-label="{{ 'customer.order.discount' | t }}">
              {{ subscription.discount_total | money }}
            </td>
          </tr>
        {%- endif -%}
        {%- if subscription.shipment_total > 0 -%}
          <tr role="row">
            <td id="RowShipping" role="rowheader" scope="row" colspan="4">
              {{ 'customer.order.shipping' | t }}
            </td>
            <td headers="RowShipping" role="cell" data-label="{{ 'customer.order.shipping' | t }}">
              {{ subscription.shipment_total | money }}
            </td>
          </tr>
        {%- endif -%}
        {%- if subscription.tax_included_total > 0 -%}
          <tr role="row">
            <td id="RowTax" role="rowheader" scope="row" colspan="4">
              {{ 'customer.order.tax' | t }}
            </td>
            <td headers="RowTax" role="cell" data-label="{{ 'customer.order.tax' | t }}">
              {{ subscription.tax_included_total | money }}
            </td>
          </tr>
        {%- endif -%}

        <tr role="row">
          <td id="RowTotal" role="rowheader" scope="row" colspan="3">{{ 'customer.order.total' | t }}</td>
          <td headers="RowTotal" role="cell" colspan="2" data-label="{{ 'customer.order.total' | t }}">
            {{ subscription.grand_total | money_with_currency }}
          </td>
        </tr>
      </tfoot>
    </table>
    </div>
    {% liquid
      assign shipping_address = subscription.shipping
      assign billing_address = subscription.billing
      if subscription.shipping.use_account
        assign shipping_address = customer.shipping
      endif
      if subscription.billing.use_account
        assign billing_address = customer.billing
      endif
    %}
    <div>
      <div>
        <h2>{{ 'customer.order.shipping_address' | t }}</h2>
        {{ shipping_address | format_address }}
      </div>
    </div>
  </div>
  <div>
      {% if subscription.status == 'active'  %}
        {{ 'customer.subscription.pause' | t }}
        {{ 'customer.subscription.cancel' | t }}
      {% endif %}

      {% if subscription.status == 'trial' %}
        {{ 'customer.subscription.cancel' | t }}
      {% endif %}

      {% if subscription.status == 'paused' %}
        {{ 'customer.subscription.resume' | t }}
      {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Subscription",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
