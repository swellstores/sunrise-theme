{%- liquid
  assign color_scheme = section.settings.color_scheme

  assign reduced_padding_top = section.settings.top_padding | times: 0.55 | round: 0
  assign reduced_padding_bottom = section.settings.bottom_padding | times: 0.55 | round: 0

  assign content_alignment = section.settings.content_alignment
  if content_alignment == 'center'
    assign align_items_class = 'items-center'
  elsif content_alignment == 'left'
    assign align_items_class = 'items-start'
  else
    assign align_items_class = 'items-end'
  endif

  assign desktop_content_width = section.settings.desktop_content_width
  if desktop_content_width == 'medium'
    assign content_width_class = 'max-w-[640px]'
  elsif desktop_content_width == 'large'
    assign content_width_class = 'max-w-[960px]'
  else
    assign content_width_class = 'max-w-[480px]'
  endif
-%}

{% style %}
  .responsive-padding-{{ section.id }} {
    padding-top: {{ reduced_padding_top }}px;
    padding-bottom: {{ reduced_padding_bottom }}px;
  }

  @media (min-width: 1024px) {
    .responsive-padding-{{ section.id }} {
      padding-top: {{ section.settings.top_padding }}px;
      padding-bottom: {{ section.settings.bottom_padding }}px;
    }
  }
{% endstyle %}

<div class="bg-[#F5F5F5] bg-{{ color_scheme }} text-{{ color_scheme }} text-{{ section.settings.content_alignment }} pl-[24px] pr-[24px] pt-[64px] pb-[64px] lg:p-[160px] responsive-padding-{{ section.id }}">
  <div class="flex flex-col justify-center gap-[32px] w-full">
    <div class="flex flex-col gap-[4px] {{ align_items_class }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'pre_heading' -%}
            <div class="text-headline-x-small font-semibold font-pre-heading {{ content_width_class }}">
              {{ block.settings.pre_heading | inline_editable: 'pre_heading' }}
            </div>
          {%- when 'heading' -%}
            <h2 class="text-headline-small font-heading {{ content_width_class }}">
              {{ block.settings.heading | inline_editable: 'heading' }}
            </h2>
          {%- when 'text' -%}
            <div class="font-display text-body-large formatted-text {{ content_width_class }}">
              {{ block.settings.text | inline_editable: 'text' }}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="flex flex-col gap-[16px] {{ align_items_class }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link' -%}
            {%- if block.settings.button_label != blank and block.settings.button_link -%}
              <div class="flex flex-col {{ content_width_class }} {{ align_items_class }}">
                {% render 'button',
                  text: block.settings.button_label,
                  href: block.settings.button_link,
                  color_scheme: color_scheme,
                  variant: block.settings.button_variant
                %}
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rich text",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "desktop_content_width",
      "label": "Desktop content width",
      "default": "small",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ]
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "range",
      "id": "top_padding",
      "label": "Top padding",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 96
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "Bottom padding",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 96
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3"
    }
  ],
  "blocks": [
    {
      "type": "pre_heading",
      "name": "Pre-heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "pre_heading",
          "label": "Pre-heading"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quality you can trust"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 3,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "Use this section to share your story, details, or key information. Keep it simple and engaging to connect with your visitors and encourage them to explore further."
        }
      ]
    },
    {
      "type": "link",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "button_variant",
          "label": "Button style",
          "options": [
            { "value": "solid", "label": "Solid" },
            { "value": "outline", "label": "Outline" }
          ],
          "default": "outline"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich text",
      "settings": {
        "content_alignment": "center",
        "color_scheme": "scheme-1"
      },
      "blocks": [
        {
          "type": "pre_heading",
          "settings": {
            "pre_heading": "Our promise"
          }
        }, {
          "type": "heading",
          "settings": {
            "heading": "Quality you can trust"
          }
        }, {
          "type": "text",
          "settings": {
            "text": "Use this section to share your story, details, or key information. Keep it simple and engaging to connect with your visitors and encourage them to explore further."
          }
        }, {
          "type": "link",
          "settings": {
            "button_label": "Learn more",
            "button_link": "https://example.com"
          }
        }
      ]
    }
  ]
}
{% endschema %}
