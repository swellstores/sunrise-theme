{%- liquid
  assign color_scheme = section.settings.color_scheme
  assign reduced_padding_top = section.settings.top_padding | times: 0.55 | round: 0
  assign reduced_padding_bottom = section.settings.bottom_padding | times: 0.55 | round: 0
-%}

{% style %}
  .responsive-padding-{{ section.id }} {
    padding-top: {{ reduced_padding_top }}px;
    padding-bottom: {{ reduced_padding_bottom }}px;
  }

  @media (min-width: 1024px) {
    .responsive-padding-{{ section.id }} {
      padding-top: {{ section.settings.top_padding }}px;
      padding-bottom: {{ section.settings.bottom_padding }}px;
    }
  }
{% endstyle %}

<div
  class="bg-{{ color_scheme }} text-{{ color_scheme }} flex flex-col items-center justify-start gap-4 pt-[24px] pb-[64px] pl-[24px] pr-[24px] sm:pt-[32px] sm:pb-[96px] responsive-padding-{{ section.id }}"
>
  <div class="flex flex-col gap-[32px] items-start w-full sm:w-auto">
    <h1 class="font-display text-headline-medium">{{ 'sections.register.title' | t }}</h1>
    {%- form 'create_customer', novalidate: 'novalidate', class: 'w-full' -%}
      {%- if form.errors -%}
        <div class="bg-red-50 w-full flex flex-col rounded-md border border-red-600 mb-4 p-4">
          <h2 tabindex="-1" autofocus class="outline-none text-base text-red-600">
            <span class="sr-only">{{ 'sections.register.error' | t }}</span>
            {{ 'sections.register.error' | t }}
          </h2>
          <div class="text-sm text-red-600">
            {{ form.errors | default_errors }}
          </div>
        </div>
      {%- endif -%}
      <div class="flex max-w-[354px] sm:w-[406px] max-w-full flex-col gap-4">
        <div class="relative">
          {% assign first_name_text = 'sections.register.first_name' | t %}
          {% render 'input',
            type: 'text',
            name: 'customer[first_name]',
            id: 'customer[first_name]',
            placeholder: first_name_text
          %}
        </div>
        <div class="relative">
          {% assign last_name_text = 'sections.register.last_name' | t %}
          {% render 'input',
            type: 'text',
            name: 'customer[last_name]',
            id: 'customer[last_name]',
            placeholder: last_name_text
          %}
        </div>
        <div class="relative">
          {% assign email_text = 'sections.register.email' | t %}
          {% render 'input',
            type: 'email',
            name: 'customer[email]',
            id: 'customer[email]',
            autocomplete: 'email',
            placeholder: email_text
          %}
        </div>
        <div class="relative">
          {% assign password_text = 'sections.register.password' | t %}
          {% render 'input',
            type: 'password',
            name: 'customer[password]',
            id: 'customer[password]',
            autocomplete: 'current-password',
            placeholder: password_text
          %}
        </div>
        <div class="flex gap-[16px] sm:gap-[32px] items-center justify-end mt-[32px] flex-col-reverse sm:flex-row">
          <div class="flex items-center justify-center gap-1 text-xs">
            <a
              href="{{ routes.account_login_url }}"
              class="underline underline-offset-2"
            >
              {{ 'sections.register.already_have_account' | t }}
            </a>
          </div>
          <div class="sm:w-[101px] w-full">
            {% assign create_account_text = 'sections.register.create_account' | t %}
            {% render 'button',
              type: 'submit',
              text: create_account_text,
              color_scheme: color_scheme
            %}
          </div>
        </div>
      </div>
    {%- endform -%}
  </div>
</div>

{% schema %}
{
  "name": "Register",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "top_padding",
      "label": "Top padding",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 96
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "Bottom padding",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 96
    }
  ]
}
{% endschema %}
