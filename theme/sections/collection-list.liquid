{%- liquid
  assign color_scheme = section.settings.color_scheme
  assign columns = section.settings.columns
  assign gap = section.settings.gap
  assign mobile_layout = section.settings.mobile_layout
  assign placeholder_index = 1

  assign top_padding = section.settings.top_padding | times: 0.1 | round: 1
  assign bottom_padding = section.settings.bottom_padding | times: 0.1 | round: 1
  assign reduced_padding_top = top_padding | times: 0.55 | round: 2
  assign reduced_padding_bottom = bottom_padding | times: 0.55 | round: 2
-%}

{% style %}
  .responsive-padding-{{ section.id }} {
    padding-top: {{ reduced_padding_top }}rem;
    padding-bottom: {{ reduced_padding_bottom }}rem;
  }

  @media (min-width: 1024px) {
    .responsive-padding-{{ section.id }} {
      padding-top: {{ top_padding }}rem;
      padding-bottom: {{ bottom_padding }}rem;
    }
  }
{% endstyle %}

<div
  class="pl-24 pr-24 lg:px-160 lg:py-96 bg-{{ color_scheme }} text-{{ color_scheme }} responsive-padding-{{ section.id }}"
>
  <div class="flex flex-col gap-8">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'pre_heading' -%}
          <p
            class="
              font-display font-pre-heading text-pre-heading
              text-{{ section.settings.header_alignment | default: 'left' }}
            "
          >
            {{ block.settings.pre_heading | inline_editable: 'pre_heading' }}
          </p>
        {%- when 'heading' -%}
          <h2
            class="
              mb-24 font-display font-heading text-heading-{{ section.settings.heading_size | default: 'small' }}
              text-{{ section.settings.header_alignment | default: 'left' }}
            "
          >
            {{ block.settings.heading | inline_editable: 'heading' }}
          </h2>
      {%- endcase -%}
    {%- endfor -%}
  </div>

  <div class="grid grid-cols-{{ mobile_layout }} sm:grid-cols-2 md:grid-cols-{{ columns }} gap-{{ gap }}">
    {%- for block in section.blocks -%}
      {%- if block.type == 'featured_category' -%}
        {% assign placeholder = 'collection-apparel-' | append: placeholder_index %}
        {% render 'list-collections-item', category: block.settings.category, placeholder: placeholder %}

        {% if placeholder_index == 3 %}
          {% assign placeholder_index = 1 %}
        {% else %}
          {% assign placeholder_index = placeholder_index | plus: 1 %}
        {% endif %}
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.category_list.name",
  "tag": "section",
  "max_blocks": 15,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.colors_header.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.content_header.content"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.all.heading_size.label",
      "default": "small",
      "options": [
        { "value": "small", "label": "t:sections.all.heading_size.options__small.label" },
        { "value": "medium", "label": "t:sections.all.heading_size.options__medium.label" },
        { "value": "large", "label": "t:sections.all.heading_size.options__large.label" },
        { "value": "extra-large", "label": "t:sections.all.heading_size.options__extra_large.label" }
      ]
    },
    {
      "type": "select",
      "id": "header_alignment",
      "label": "t:sections.category_list.settings.header_alignment.label",
      "default": "left",
      "options": [
        { "value": "left", "label": "t:sections.category_list.settings.header_alignment.options__left.label" },
        { "value": "center", "label": "t:sections.category_list.settings.header_alignment.options__center.label" },
        { "value": "right", "label": "t:sections.category_list.settings.header_alignment.options__right.label" }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.layout_header.content"
    },
    {
      "type": "range",
      "id": "top_padding",
      "label": "t:sections.all.padding.padding_top",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "t:sections.all.padding.padding_bottom",
      "min": 0,
      "max": 96,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "columns",
      "label": "t:sections.category_list.settings.columns.label",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:sections.category_list.settings.gap.label",
      "min": 0,
      "max": 24,
      "step": 1,
      "default": 4,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "t:sections.category_list.settings.mobile_layout.label",
      "options": [
        { "value": "1", "label": "t:sections.category_list.settings.mobile_layout.options__1.label" },
        { "value": "2", "label": "t:sections.category_list.settings.mobile_layout.options__2.label" }
      ],
      "default": "1"
    }
  ],
  "blocks": [
    {
      "type": "pre_heading",
      "name": "t:sections.category_list.blocks.pre_heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "pre_heading",
          "label": "t:sections.all.pre_heading.label"
        }
      ]
    },
    {
      "type": "heading",
      "name": "t:sections.category_list.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "t:sections.category_list.blocks.heading.settings.heading.label",
          "default": "t:sections.category_list.blocks.heading.settings.heading.default"
        }
      ]
    },
    {
      "type": "featured_category",
      "name": "t:sections.category_list.blocks.featured_category.name",
      "settings": [
        {
          "type": "collection",
          "id": "category",
          "label": "t:sections.category_list.blocks.featured_category.settings.category.label"
        },
        {
          "type": "range",
          "id": "col_span",
          "label": "t:sections.category_list.blocks.featured_category.settings.col_span.label",
          "info": "t:sections.category_list.blocks.featured_category.settings.col_span.info",
          "min": 1,
          "max": 12,
          "step": 1,
          "default": 1
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.category_list.presets.name",
      "blocks": [
        { "type": "heading" },
        { "type": "featured_category" },
        { "type": "featured_category" },
        { "type": "featured_category" }
      ]
    }
  ]
}
{% endschema %}
